{
	"name": "exort",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently -n web,api -c cyan,green \"pnpm dev:web\" \"pnpm dev:api\"",
		"dev:web": "pnpm -F @exort/web dev",
		"dev:api": "pnpm -F @exort/api dev",
		"build": "pnpm -F @exort/web build",
		"check": "pnpm -F @exort/web check",
		"lint": "pnpm -F @exort/web lint",
		"format": "pnpm -F @exort/web format"
	},
	"packageManager": "pnpm@10.28.2",
	"engines": {
		"node": ">=20"
	},
	"devDependencies": {
		"concurrently": "^9.2.1"
	}
}
