DATABASE_URL="postgres://exort:exort@localhost:5432/exort"

# Stockfish binary path (per OS):
#   macOS (Homebrew):  /opt/homebrew/bin/stockfish
#   Linux (apt):       /usr/games/stockfish
#   Windows (manual):  C:\stockfish\stockfish.exe
STOCKFISH_PATH="/opt/homebrew/bin/stockfish"

# Analysis tuning (defaults match Lichess: 2.25M nodes/move)
ANALYSIS_NODES=2250000
ANALYSIS_DEPTH=0
STOCKFISH_THREADS=2
STOCKFISH_HASH_MB=64

# Worker polling
POLL_INTERVAL=5
MAX_CONCURRENT=2
TIME_LIMIT_PER_GAME=300
